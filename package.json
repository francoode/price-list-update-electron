{
  "name": "space-monutir",
  "version": "1.0.0",
  "description": "// https://github.com/Adamant-im/ETH-transactions-storage",
  "main": "src/main.js",
  "build": {
    "appId": "enupal-electronv1",
    "asar": true,
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.9.6",
    "axios": "^0.21.1",
    "babel-plugin-inline-dotenv": "^1.5.0",
    "dotenv": "^8.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "jimp": "^0.16.1",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.2",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.13.0",
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "electron": "^12.0.7",
    "nodemon": "^2.0.3"
  },
  "resolutions": {
    "babel-core": "7.0.0-bridge.0"
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron-forge start",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": {
    "type": "git",
    "url": "git+https://francoode@bitbucket.org/mellowwallet/indexer-blockchain.git"
  },
  "author": "francoode",
  "license": "ISC",
  "homepage": "https://bitbucket.org/mellowwallet/indexer-blockchain#readme",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "space_monutir"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
